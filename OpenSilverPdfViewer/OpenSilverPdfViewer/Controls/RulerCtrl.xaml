<UserControl
    x:Name="rulerCtrlInternal" 
    x:Class="OpenSilverPdfViewer.Controls.RulerCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilverPdfViewer.Controls"
    SizeChanged="Ruler_SizeChanged">
    
    <Grid>
        <Border 
            x:Name="rulerBorder" 
            Background="{Binding Background, ElementName=rulerCtrlInternal}">
            <Canvas x:Name="rulerCanvas" ClipToBounds="True"/>
        </Border>
    </Grid>
</UserControl>
