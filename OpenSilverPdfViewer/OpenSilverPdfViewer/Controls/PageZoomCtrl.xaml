<UserControl
    x:Class="OpenSilverPdfViewer.Controls.PageZoomCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilverPdfViewer.Controls">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/OpenSilverPdfViewer;component/Styles/BrushStyles.xaml"/>
                <ResourceDictionary Source="/OpenSilverPdfViewer;component/Styles/ToolBarButtonStyles.xaml"/>
                <ResourceDictionary Source="/OpenSilverPdfViewer;component/Styles/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <StackPanel 
            Height="32"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <local:ToolBarButton
                Height="30"
                ShadowThickness="1,0,1,1"
                DisabledMargin="1"
                CornerRadius="3,0,0,3">
                <TextBlock 
                    IsEnabled="False" 
                    Margin="0,-4,0,0" 
                    FontSize="26" 
                    Text="-"/>
            </local:ToolBarButton>
            <ComboBox
                FontSize="12"
                SelectedIndex="0"
                SelectionChanged="ZoomLevel_SelectionChanged"
                Width="110">
                <ComboBoxItem Content="Fit to View"/>
                <ComboBoxItem Content="25%"/>
                <ComboBoxItem Content="50%"/>
                <ComboBoxItem Content="75%"/>
                <ComboBoxItem Content="100%"/>
                <ComboBoxItem Content="125%"/>
                <ComboBoxItem Content="150%"/>
                <ComboBoxItem Content="175%"/>
                <ComboBoxItem Content="200%"/>
            </ComboBox>
            <local:ToolBarButton
                Height="30"
                ShadowThickness="1,0,1,1"
                DisabledMargin="1"
                CornerRadius="0,3,3,0">
                <TextBlock 
                    IsEnabled="False" 
                    Margin="0,-4,0,0" 
                    FontSize="22" 
                    Text="+"/>
            </local:ToolBarButton>
        </StackPanel>
    </Grid>
</UserControl>
