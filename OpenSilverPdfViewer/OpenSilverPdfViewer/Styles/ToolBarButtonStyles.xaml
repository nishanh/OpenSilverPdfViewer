<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilverPdfViewer.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/OpenSilverPdfViewer;component/Styles/BrushStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="local:ToolBarButton">
        <Setter Property="MinWidth" Value="30"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="ContentHighlightColor" Value="{StaticResource ControlLightColor}"/>
        <Setter Property="Foreground" Value="{StaticResource CMSCtrlButtonForegroundBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ToolBarButton">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.1"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Background" 
                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                            To="{StaticResource RaisedHighlightColor}" 
                                            Duration="0:0:0.1" />
                                        <ColorAnimation 
                                            Storyboard.TargetName="Background" 
                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)" 
                                            To="{StaticResource CtrlHoverStartColor}" 
                                            Duration="0:0:0.1" />
                                        <ColorAnimation 
                                            Storyboard.TargetName="Background" 
                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)" 
                                            To="{StaticResource CtrlNormalEndColor}" 
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                            Storyboard.TargetName="ContentForegroundColorizer"
                                            Duration="0:0:0.1"
                                            To="{StaticResource ControlLightColor}"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetProperty="Opacity" 
                                                Storyboard.TargetName="DisabledOverlay"
                                                To="1" 
                                                Duration="0"/>
                                        </Storyboard>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusedStates">
                                <VisualState x:Name="Focused"/>
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border 
                            x:Name="Background" 
                            CornerRadius="{TemplateBinding CornerRadius}" 
                            BorderBrush="{StaticResource RaisedHighlightBrush}" 
                            BorderThickness="0,1,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Offset="0.0" Color="{StaticResource CtrlNormalStartColor}" />
                                    <GradientStop Offset="1.2" Color="{StaticResource CtrlNormalEndColor}" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border 
                            x:Name="Hover" 
                            Opacity="0" 
                            BorderThickness="0,1,0,1" 
                            CornerRadius="{TemplateBinding CornerRadius}" 
                            Background="{StaticResource CtrlHighlightBrush}"
                            BorderBrush="{StaticResource CtrlBorderBrush}"/>
                        <Border 
                            x:Name="Shadow" 
                            BorderBrush="{StaticResource RaisedShadowBrush}" 
                            BorderThickness="{TemplateBinding ShadowThickness}" 
                            CornerRadius="{TemplateBinding CornerRadius}" />
                        <ContentControl 
                            x:Name="ContentForegroundColorizer"
                            Margin="{TemplateBinding Padding}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            Foreground="{TemplateBinding Foreground}">
                            <ContentPresenter x:Name="ContentArea"/>
                        </ContentControl>
                        <Border 
                            x:Name="DisabledOverlay"
                            Margin="{TemplateBinding DisabledMargin}"
                            Opacity="0"
                            IsHitTestVisible="False"
                            Background="{StaticResource CMSCtrlDisabledBodyBrush}"
                            CornerRadius="{TemplateBinding DisabledRadius}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
