<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilverPdfViewer.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/OpenSilverPdfViewer;component/Styles/NumericSpinStyles.xaml"/>
        <ResourceDictionary Source="/OpenSilverPdfViewer;component/Styles/ScrollViewerStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="CMSZoomComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="TabNavigation" Value="Local"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Grid Background="{TemplateBinding Background}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Duration="0" 
                                            To="1" 
                                            Storyboard.TargetProperty="Opacity" 
                                            Storyboard.TargetName="fillColor"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Duration="0" 
                                            To=".55" 
                                            Storyboard.TargetProperty="Opacity" 
                                            Storyboard.TargetName="contentPresenter"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected"/>
                                <VisualState x:Name="Selected">
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Duration="0" 
                                            To="1" 
                                            Storyboard.TargetProperty="Opacity" 
                                            Storyboard.TargetName="fillColor2"/>
                                        <ColorAnimation 
                                            Duration="00:00:00" 
                                            To="{StaticResource CMSColorForegroundPressed}"
                                            Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)" 
                                            Storyboard.TargetName="ContentPresenterColorizer"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames 
                                            Duration="0" 
                                            Storyboard.TargetProperty="Visibility" 
                                            Storyboard.TargetName="FocusVisualElement">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle 
                            x:Name="fillColor" 
                            Fill="{StaticResource CMSListItemHighlightBrush}" 
                            IsHitTestVisible="False" 
                            Opacity="0" 
                            RadiusY="1" 
                            RadiusX="1"/>
                        <Rectangle 
                            x:Name="fillColor2" 
                            Fill="Transparent"
                            IsHitTestVisible="False" 
                            Opacity="0" 
                            RadiusY="1" 
                            RadiusX="1"/>
                        <UserControl
                            x:Name="ContentPresenterColorizer"
                            Foreground="{StaticResource ForegroundBrush}">
                            <ContentPresenter 
                                x:Name="contentPresenter" 
                                ContentTemplate="{TemplateBinding ContentTemplate}" 
                                Content="{TemplateBinding Content}" 
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                Margin="{TemplateBinding Padding}"/>
                        </UserControl>
                        <Rectangle 
                            x:Name="FocusVisualElement" 
                            RadiusY="1" 
                            RadiusX="1" 
                            Stroke="{StaticResource CMSBrushBackgroundSelected}" 
                            StrokeThickness="1" 
                            Visibility="Collapsed"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="CMSZoomComboBoxTextStyle" TargetType="TextBox">
        <Setter Property="SelectionForeground" Value="{x:Null}"/>
        <Setter Property="CaretBrush" Value="{StaticResource CMSCtrlButtonForegroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border 
                        x:Name="Border"
                        Background="{TemplateBinding Background}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Disabled"/>
                                <VisualState x:Name="ReadOnly"/>
                                <VisualState x:Name="MouseOver" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ScrollViewer 
                            Margin="0,0,1,0"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Right"
                            VerticalContentAlignment="Center"
                            x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="CMSZoomComboBoxToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Background" 
                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                            To="{StaticResource RaisedHighlightColor}" 
                                            Duration="0:0:0.1" />
                                        <ColorAnimation 
                                            Storyboard.TargetName="Background" 
                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)" 
                                            To="{StaticResource CtrlHoverStartColor}" 
                                            Duration="0:0:0.1" />
                                        <ColorAnimation 
                                            Storyboard.TargetName="Background" 
                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)" 
                                            To="{StaticResource CtrlNormalEndColor}" 
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed"/>
                                <VisualState x:Name="Disabled"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="22" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.ColumnSpan="3">
                            <Border 
                                x:Name="Background" 
                                BorderBrush="{StaticResource RaisedHighlightBrush}" 
                                BorderThickness="0,1,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0.0" Color="{StaticResource CtrlNormalStartColor}" />
                                        <GradientStop Offset="1.2" Color="{StaticResource CtrlNormalEndColor}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Border 
                                x:Name="Hover" 
                                Opacity="0" 
                                BorderThickness="0,1,0,1" 
                                Background="{StaticResource CtrlHighlightBrush}"
                                BorderBrush="{StaticResource CtrlBorderBrush}" >
                            </Border>
                            <Border 
                                x:Name="Shadow" 
                                BorderBrush="{StaticResource RaisedShadowBrush}" 
                                BorderThickness="0,0,0,1"/>
                            <ContentPresenter
                                x:Name="Content"
                                Margin="0,0,0,2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Grid>
                        <Rectangle 
                            Grid.Column="1" 
                            Width="1" 
                            Stroke="{StaticResource CMSCtrlInsetBrush}"/>
                        <Path
                            x:Name="Arrow"
                            Grid.Column="2"
                            Fill="{StaticResource CMSCtrlButtonForegroundBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 0 0 L 4 4 L 8 0 Z"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="CMSZoomComboBoxStyle" TargetType="ComboBox">
        <Setter Property="ItemContainerStyle" Value="{StaticResource CMSZoomComboBoxItemStyle}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="MaxDropDownHeight" Value="250"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                            Storyboard.TargetName="ContentForegroundColorer"
                                            Duration="0:0:0"
                                            To="{StaticResource ForegroundColor}"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames 
                                            Duration="0:0:0"
                                            Storyboard.TargetProperty="(Border.Visibility)" 
                                            Storyboard.TargetName="DisabledOverlay">
                                            <DiscreteObjectKeyFrame 
                                                KeyTime="0:0:0.0" 
                                                Value="{x:Static Visibility.Visible}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="EditStates">
                                <VisualState x:Name="Editable">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames 
                                            Storyboard.TargetProperty="(UIElement.Visibility)"
                                            Storyboard.TargetName="PART_EditableTextBox">
                                            <DiscreteObjectKeyFrame 
                                                KeyTime="0" 
                                                Value="{x:Static Visibility.Visible}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames 
                                            Storyboard.TargetProperty="(UIElement.Visibility)"
                                            Storyboard.TargetName="ContentSite">
                                            <DiscreteObjectKeyFrame 
                                                KeyTime="0"
                                                Value="{x:Static Visibility.Collapsed}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Uneditable" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ToggleButton 
                            x:Name="ToggleButton"
                            Style="{StaticResource CMSZoomComboBoxToggleButtonStyle}"
                            Focusable="false"
                            ClickMode="Press"
                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, 
                            RelativeSource={RelativeSource TemplatedParent}}"/>
                        <ContentControl 
                            x:Name="ContentForegroundColorer"
                            Margin="0,0,22,0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Foreground="{StaticResource ForegroundBrush}">
                            <ContentPresenter 
                                x:Name="ContentSite"
                                IsHitTestVisible="False"
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                        </ContentControl>
                        <Border 
                            x:Name="DisabledOverlay"
                            Margin="0,0,0,1"
                            Visibility="Collapsed"
                            Background="{StaticResource CMSCtrlDisabledBodyBrush}"/>
                        <Popup
                            x:Name="Popup"
                            VerticalOffset="-2"
                            Placement="Top"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            Focusable="False">
                            <Border  
                                Margin="0,0,5,5" 
                                CornerRadius="4">
                                <Grid
                                    Name="DropDown"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border 
                                        x:Name="DropDownBorder" 
                                        Background="{StaticResource PopupBorderBrush}" 
                                        CornerRadius="4" />
                                    <ScrollViewer 
                                        x:Name="ScrollViewer" 
                                        Style="{StaticResource CMSVerticalScrollViewerStyle}"                                    
                                        BorderThickness="0" 
                                        Padding="1">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:ZoomViewCtrl">
        <Setter Property="MinHeight" Value="22"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ZoomViewCtrl">
                    <Grid x:Name="LayoutRoot">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Disabled"/>
                                <VisualState x:Name="ReadOnly"/>
                                <VisualState x:Name="MouseOver" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="22"/>
                            </Grid.ColumnDefinitions>
                            <!-- Decrement Button -->
                            <RepeatButton
                                x:Name="PART_DecrementButton"
                                Template="{StaticResource CMSDecrementButton}">
                            </RepeatButton>
                            <Grid  
                                Grid.Column="1">
                                <ComboBox
                                    x:Name="PART_ComboBox"
                                    Style="{StaticResource CMSZoomComboBoxStyle}"/>
                                <TextBlock
                                    x:Name="PART_ZoomValueText"
                                    Margin="0,0,22,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource ForegroundBrush}"
                                    IsHitTestVisible="False"
                                    FontSize="12"/>
                                <Border 
                                    x:Name="PART_TextBlockHitTester"
                                    Visibility="Collapsed"
                                    Background="Transparent"
                                    Margin="0,0,22,0">
                                </Border>
                                <TextBox 
                                    x:Name="PART_EditableTextBox"
                                    FontSize="12"
                                    Style="{StaticResource CMSZoomComboBoxTextStyle}"
                                    Cursor="Arrow"
                                    Background="{StaticResource CtrlNormalBrush}"
                                    Foreground="{TemplateBinding ForegroundBrush}"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    MaxLength="3"
                                    Height="20"
                                    Margin="0,0,22,0"
                                    Focusable="True"
                                    Visibility="Collapsed"
                                    IsReadOnly="True">
                                    <TextBox.ContextMenu>
                                        <ContextMenu Visibility="Collapsed"/>
                                    </TextBox.ContextMenu>
                                </TextBox>
                            </Grid>
                            <!-- Increment Button -->
                            <RepeatButton
                                x:Name="PART_IncrementButton"
                                Template="{StaticResource CMSIncrementButton}"
                                Grid.Column="2">
                            </RepeatButton>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
